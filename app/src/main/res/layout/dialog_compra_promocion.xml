<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        />

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTitle"
        />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProducto"
        android:textColor="@color/text_grey"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_above="@+id/btnAceptarCanje"
        android:layout_alignLeft="@+id/btnAceptarCanje"
        android:layout_alignStart="@+id/btnAceptarCanje"
        android:layout_marginBottom="13dp"
        />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtDesc"
        android:layout_alignRight="@+id/txtCantidad"
        android:layout_marginRight="60dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/txtCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtDesc"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtDesc"
        android:layout_alignLeft="@+id/txtCantidad"
        android:layout_marginLeft="60dp"
        app:srcCompat="@android:drawable/presence_busy" />

    <Button
        android:id="@+id/pagoOro"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:background="@drawable/cartadorada"
        android:text="Pagar 5 Oro"
        android:alpha="0.8"
        />

    <Button
        android:id="@+id/pagoPlata"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pagoOro"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:background="@drawable/cartaplata"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Pagar 5 Plata"
        android:alpha="0.8"
        />

    <Button
        android:id="@+id/pagoBronce"
        android:background="@drawable/cartabronce"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pagoPlata"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Pagar 5 Bronce"
        android:alpha="0.8"
        />

</RelativeLayout>